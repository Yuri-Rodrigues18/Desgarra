<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="menu.DescricaoPeluciaFragment">

    <RelativeLayout
        android:id="@+id/Meio"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_gravity="top"
        android:background="@drawable/borda_nome_descricao"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pelucia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/img_16" />

    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="top"
        android:gravity="start"
        android:id="@+id/Cima"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/borda_barra"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/Meio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_marginBottom="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_9"/>

        <ImageButton
            android:id="@+id/upgrade"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:backgroundTint="#00FFFFFF"
            android:layout_margin="190dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_11"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/Meio2"
        android:layout_width="375dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/borda_postagem"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="231dp"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-7dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="152dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/img_20" />

        <LinearLayout
            android:id="@+id/pagamento1"
            android:layout_width="371dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"

            android:layout_marginEnd="4dp"
            android:layout_marginBottom="89dp"
            android:background="@drawable/borda_nome_descricao"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pagamento2"
                android:layout_width="334dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitCenter"
                android:text="Preço/Forma de Pagamento/Troca"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Meio3"
        android:layout_width="375dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/borda_postagem"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/descricaobicho"
            android:layout_width="231dp"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/img_21" />

        <LinearLayout
            android:id="@+id/descpelu1"
            android:layout_width="371dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"

            android:layout_marginEnd="4dp"
            android:layout_marginBottom="89dp"
            android:background="@drawable/borda_nome_descricao"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descpelu2"
                android:layout_width="334dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitCenter"
                android:text="Descrição da Pelúcia"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Meio4"
        android:layout_width="375dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-200dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/borda_postagem"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/vendedor1"
            android:layout_width="371dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"

            android:layout_marginEnd="4dp"
            android:layout_marginBottom="89dp"
            android:background="@drawable/borda_nome_descricao"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nomevendedor2"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/img_15" />
            />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="283dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="60dp"
            android:text="Descrição do Vendedor."
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:id="@+id/Baixo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/borda_barra"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Meio">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/img_12" />

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/img_13" />

        <ImageButton
            android:id="@+id/perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/img_14"/>

    </LinearLayout>


</FrameLayout>